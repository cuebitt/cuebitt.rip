---
interface Props {
  colors: {
    description: string;
    hex: string;
  }[];
}

const { colors } = Astro.props;
---

<div
  class="not-prose overflow-hidden rounded-md bg-white shadow-lg dark:bg-gray-800"
>
  <table class="w-full">
    <thead>
      <tr>
        <th scope="col" class="p-2">Swatch</th>
        <th scope="col" class="p-2">Description</th>
        <th scope="col" class="p-2">Hex</th>
      </tr>
    </thead>

    <tbody>
      {
        colors.map((color) => (
          <tr class="even:bg-slate-50 dark:even:bg-slate-600">
            <td
              style={`background-color: ${color.hex};`}
              onclick={`navigator.clipboard.writeText('${color.hex}'); alert('copied!');`}
            />
            <td class="px-3 py-2">{color.description}</td>
            <td class="px-3 py-2">
              <span class="font-mono">{color.hex}</span>
            </td>
          </tr>
        ))
      }
    </tbody>
  </table>
</div>
