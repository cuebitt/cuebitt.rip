---
import Layout from "../layouts/Layout.astro";
import { Image, getImage } from "astro:assets";

const og_image_optimized = await getImage({
  src: "https://lh3.googleusercontent.com/d/1AEK8eeReXyjul27eKhplG6aneMTuf4cL",
  width: 4063,
  height: 3893,
});
---

<Layout title="Cuebitt.RIP">
  <Fragment slot="head">
    <script
      src="https://cdn.jsdelivr.net/gh/cuebitt/webcomponents@v1.3.1/components/lanyard-status/lanyard-status.min.js"
    ></script>
    <meta name="og:image" content={og_image_optimized.src} />
    <meta name="og:description" content="Cuebitt's links and bio" />
  </Fragment>

  <main
    class="bg-waves h-full flex flex-col justify-center bg-cover bg-center bg-no-repeat"
  >
    <div class="mx-auto container">
      <div
        class="grid-cols-2 overflow-hidden border-8 border-violet-200 rounded-2xl bg-violet-50 md:grid dark:border-indigo-500 dark:bg-violet-800"
      >
        <div
          class="bg-topographic relative border-r-2 border-violet-200 dark:border-indigo-500"
        >
          <div class="w-full flex items-center justify-center p-8">
            <span
              class="h-full w-1/2 overflow-hidden rounded-[50%] outline-2 outline-yellow-300 outline-offset-4 outline transition-border-radius duration-300 ease-in-out hover:rounded-lg"
            >
              <Image
                src="https://lh3.googleusercontent.com/d/1AEK8eeReXyjul27eKhplG6aneMTuf4cL"
                alt="Profile. Anthro cow with white fur and lavender spots. Halo above head. Bust shot."
                width={1600}
                height={1533}
              />
            </span>
          </div>

          <div>
            <div
              class="z-10 w-fit translate-y-1 border-4 border-b-0 border-slate-800 rounded-tr-xl bg-violet-300 p-2 font-montserrat dark:border-slate-100 dark:bg-violet-900"
            >
              <h1 class="text-4xl text-zinc-800 font-bold dark:text-zinc-100">
                Cuebitt
              </h1>
            </div>

            <div
              class="flex flex-col gap-5 border-4 border-slate-800 rounded-bl-lg bg-violet-300 px-5 pb-8 pt-5 text-xl text-zinc-700 font-normal dark:border-slate-100 dark:bg-violet-900 dark:text-zinc-200"
            >
              <p class="mx-auto w-fit italic">
                ✨ 23yrs, he/him/his, gay, furry 😇🐮, vegan 🌱 ✨
              </p>
              <p>
                I'm Cuebitt, the one and only. I'm a<span
                  class="bg-slate-500 text-transparent hover:bg-transparent hover:text-inherit"
                  >n unemployed</span
                >
                software developer and a furry. I love to read books and I have an
                unhealthy obsession with fountain pens.
              </p>
            </div>
          </div>
        </div>
        <div class="w-full flex flex-col items-center justify-center gap-6">
          <h1 class="text-5xl text-zinc-800 font-bold dark:text-zinc-100">
            Links
          </h1>
          <div
            class="w-3/4 flex flex-col gap-4 text-lg text-zinc-100 font-montserrat lg:text-2xl dark:text-zinc-100"
            x-data
          >
            <dialog
              x-ref="discordModal"
              class="w-1/3 rounded-xl bg-violet-200 text-lg text-slate-800 font-sans dark:bg-violet-700 dark:text-slate-200"
            >
              <header
                class="w-full flex flex-row justify-between bg-slate-200 p-2 dark:bg-slate-800"
              >
                <h1 class="text-4xl font-bold">Discord</h1>
                <button @click="$refs.discordModal.close()" class="w-10">
                  <i class="i-fa6-solid:xmark"></i>
                </button>
              </header>
              <div class="mx-auto flex flex-col gap-3 p-4 container">
                <div class="mx-auto w-fit overflow-hidden rounded-lg">
                  <lanyard-status></lanyard-status>
                </div>
                <p class="text-base">You can find me on Discord as:</p>
                <pre
                  class="rounded-md bg-slate-700 p-3 text-slate-300"><code>cuebitt</code></pre>
                <p>
                  (formerly known as <span class="font-mono">cuebitt#2209</span
                  >)
                </p>
              </div>
            </dialog>

            <dialog
              x-ref="nsoModal"
              class="w-1/3 rounded-xl bg-violet-200 text-lg text-slate-800 font-sans dark:bg-violet-700 dark:text-slate-200"
            >
              <header
                class="m-0 w-full flex flex-row justify-between bg-slate-200 p-2 dark:bg-slate-800"
              >
                <h1 class="text-4xl font-bold">Nintendo Switch Online</h1>
                <button @click="$refs.nsoModal.close()" class="w-10">
                  <i class="i-fa6-solid:xmark"></i>
                </button>
              </header>

              <div class="mx-auto flex flex-col gap-3 p-4 container">
                <p>My Nintendo Switch Online friend code is:</p>
                <pre
                  class="rounded-md bg-slate-700 p-3 text-slate-300"><code>SW-4871-6119-5311</code></pre>
                <a
                  class="text-blue-400 underline"
                  href="https://lounge.nintendo.com/friendcode/4871-6119-5311/DVd2pYxgyV"
                  rel="noopener noreferrer"
                  target="_blank"
                  >Click here to open in the Nintendo Switch Online app 🔗</a
                >
                <p>I mainly play Splatoon 3 🦑🐙.</p>
              </div>
            </dialog>

            <a
              href="https://bsky.app/profile/cuebitt.rip"
              rel="noopener"
              target="_blank"
              class="w-full flex flex-row items-center justify-between rounded-full bg-violet-400 px-6 py-4 shadow-md transition hover:scale-110 dark:bg-violet-900 hover:bg-violet-500 dark:hover:bg-violet-700"
              >Bluesky<i class="i-fa6-brands:bluesky"></i></a
            >
            <a
              rel="noopener"
              target="_blank"
              href="https://t.me/cuebitt"
              class="w-full flex flex-row items-center justify-between rounded-full bg-violet-400 px-6 py-4 shadow-md transition hover:scale-110 dark:bg-violet-900 hover:bg-violet-500 dark:hover:bg-violet-700"
              >Telegram<i class="i-fa6-brands:telegram"></i>
            </a>
            <button
              class="w-full flex flex-row items-center justify-between rounded-full bg-violet-400 px-6 py-4 shadow-md transition hover:scale-110 dark:bg-violet-900 hover:bg-violet-500 dark:hover:bg-violet-700"
              @click="$refs.discordModal.showModal()"
            >
              Discord<i class="i-fa6-brands:discord"></i>
            </button>
            <button
              class="w-full flex flex-row items-center justify-between whitespace-nowrap rounded-full bg-violet-400 px-6 py-4 shadow-md transition hover:scale-110 dark:bg-violet-900 hover:bg-violet-500 dark:hover:bg-violet-700"
              @click="$refs.nsoModal.showModal()"
            >
              Nintendo Switch<i class="i-mdi:nintendo-switch"></i>
            </button>
            <a
              href="/art"
              class="w-full flex flex-row items-center justify-between rounded-full bg-violet-400 px-6 py-4 shadow-md transition hover:scale-110 dark:bg-violet-900 hover:bg-violet-500 dark:hover:bg-violet-700"
              >Fursona Wiki<i class="i-fa6-solid:palette"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .bg-waves {
    background-image: url("/src/pages/_index/waves-light.svg");
  }

  .bg-topographic {
    background-image: url("/src/pages/_index/topographic-light.svg");
  }

  @media (prefers-color-scheme: dark) {
    .bg-topographic {
      background-image: url("/src/pages/_index/topographic-dark.svg");
    }

    .bg-waves {
      background-image: url("/src/pages/_index/waves-dark.svg");
    }
  }

  html,
  body {
    overscroll-behavior: none;
  }
</style>
